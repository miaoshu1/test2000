jQuery(function($){
	function load(currentPage,rowsPerPage) {
		$.ajax({
			url: "/clue/page.json",
			data: {
				currentPage,
				rowsPerPage,
				name: $("#searchForm :input[name=name]").val(),
				owner: $("#searchForm :input[name=owner]").val(),
				phone: $("#searchForm :input[name=phone]").val(),
				mphone: $("#searchForm :input[name=mphone]").val(),
				company: $("#searchForm :input[name=company]").val(),
				source: $("#searchForm :input[name=source]").val(),
				state: $("#searchForm :input[name=state]").val()
			},
			success: function (page) {
				// 初始化表格数据
				let data = page.data;
				let arr = [];
				$(data).each(function () {
					arr.push(
					'<tr>\
						<td><input type="checkbox" /></td>\
						<td><a href="detail.html?id=',this.id,'">',this.fullName,'</a></td>\
						<td>',this.company,'</td>\
						<td>',this.phone,'</td>\
						<td>',this.mphone,'</td>\
						<td>',this.source,'</td>\
						<td>',this.owner,'</td>\
						<td>',this.state,'</td>\
					</tr>'
					)
				})

				$("#dataBody").html(arr.join(""))

				// 初始化分页查询件，page：后端返回的分页对象
				$("#pager").bs_pagination({
					currentPage: page.currentPage,          // 页码(第几页)
					rowsPerPage: page.rowsPerPage,          // 每页显示的记录条数
					maxRowsPerPage: page.maxRowsPerPage,    // 每页最多显示的记录条数
					totalRows: page.totalRows,              // 总记录数
					totalPages: page.totalPages,            // 总页数
					visiblePageLinks: page.visiblePageLinks,// 显示几个卡片
					// 当前页发生改变时执行的函数
					onChangePage: function (event, data) {
						load(data.currentPage, data.rowsPerPage);
					}
				});
			}
		})
	}
	load();

	$("#searchBtn").click(function () {
		load();
	})



